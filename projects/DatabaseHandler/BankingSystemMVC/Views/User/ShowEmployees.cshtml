@model List<Employee>
<form>
<select id="employees">
		@foreach (var employee in Model)
		{
			<option value="@employee.Id">@employee.LastName @employee.FirstName</option>
		}
	</select>
	<button type="button" id="show-button"> Show employee info</button>
</form>

<div id=employeeInfo></div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>	
	$(document).ready (function(){
	$("#show-button").click(function(){
		var employeeId = document.getElementById("employees").value;
		$('#employeeInfo').load("/User/ShowEmployeeInfo/" +employeeId);
	});
});

</script>


