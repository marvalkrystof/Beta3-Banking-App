@using BankingSystemMVC.ViewModels
@model CreateTransactionViewModel

@{
    ViewData["Title"] = "Create Transaction";
}


<h1>Create Transaction</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTransaction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.FromAccountId" class="control-label"></label>
                <select asp-for="Transaction.FromAccountId" class ="form-control">
                @foreach (var account in Model.Accounts)
                {
                <option value="@account.Id">@account.AccountNumber</option>
                }
                </select>
            
            </div>
            <div class="form-group">
                <label asp-for="Transaction.ToAccountId" class="control-label"></label>
                <select asp-for="Transaction.ToAccountId" class ="form-control">
                    @foreach (var account in Model.Accounts)
                    {
                    <option value="@account.Id">@account.AccountNumber</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input asp-for="Transaction.Amount" class="form-control" />
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Note" class="control-label"></label>
                <input asp-for="Transaction.Note" class="form-control" />
                <span asp-validation-for="Transaction.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>



        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
